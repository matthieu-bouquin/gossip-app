  <div class="container">
    <h1>A propos de <%=@user.first_name%></h1>
    <ul>
        <li>Prénom : <%=@user.first_name%></li>
        <li>Nom : <%=@user.last_name%></li>
        <li>Age : <%=@user.age%></li>
        <li>Email : <%=@user.email%></li>
        <li>Ville : <%=@user.city.name%> <%=@user.city.zip_code%> </li>
        <li><a class="btn btn-outline-secondary btn-sm" role="button" href="<%=city_path(@user.city_id) %>">Voir les gossips de <%=@user.city.name%></a></li>
        <li>Nombre de gossips : <%=@user.gossips.count%> gossip(s)</li>
        <li>Nombre de likes : <%=@user.likes.count%> like(s)</li>
    </ul>
  </div>
